<?xml version="1.0" encoding="UTF-8"?>
<Widget xmlns="ru.stablex.ui.widgets"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="ru.stablex.ui.widgets ../gen/schemas/ru.stablex.ui.widgets.xsd">

	<VBox w="$Lib.current.stage.stageWidth" h="$Lib.current.stage.stageHeight">

		<!-- without stretching -->
		<HBox skin:Paint-color="0x55aa55" padding="50" childPadding="30" widthPt="80">

			<!-- full image -->
			<Bmp src="'assets/haxe.png'"/>

			<!-- part of image -->
			<Bmp src="'assets/haxe.png'" xOffset="72" yOffset="72" w="76" h="76"/>

			<!-- part of image with autoWidth -->
			<Bmp src="'assets/haxe.png'" xOffset="0" yOffset="0" autoWidth="true" h="148"/>
		</HBox>

		<!-- with stretching -->
		<HBox skin:Paint-color="0x555555" padding="50" childPadding="30" widthPt="100">
			<!-- distorted -->
			<Bmp src="'assets/haxe.png'" w="100" h="100" stretch="true"/>
			<!-- fixed aspect ratio -->
			<Bmp src="'assets/haxe.png'" w="100" h="100" stretch="true" keepAspect="true"/>
		</HBox>

		<HBox skin:Paint-color="0x55cc55" padding="50" childPadding="30" widthPt="80">
			<Bmp src="'assets/haxe.png'" w="100" h="100" stretch="true" />

			<Bmp src="'assets/haxe.png'" w="100" h="100" stretch="true" keepAspect="true" />
		</HBox>
	</VBox>

</Widget>

